generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  documents Document[]
}

model Document {
  id            String   @id @default(uuid())
  filename      String
  path          String
  extractedText String   // OCR Output
  createdAt     DateTime @default(now())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
}